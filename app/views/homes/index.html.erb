            <%= render partial: 'itemables/itemables', locals: { itemable: product, category: product.category, class_name: 'col-md-3' } %>
          <% else %>
            <%= render partial: 'itemables/out_of_itemables', locals: { itemable: product, category: product.category, class_name: 'col-md-3' } %>
          <% end %>
        <% end %>
      </div>
  </section>

  <div class="banner-cs">
    <img src="https://images.fpt.shop/unsafe/fit-in/1200x100/filters:quality(90):fill(white)/fptshop.com.vn/Uploads/Originals/2022/7/5/637926428304638915_F-H7_1200x100.png" alt="">
  </div>

  <section class="content-sale" id="product-list">
    <div class="prd-sale">
      <h2><%= @index_facade.products_itemable_2.first.category.name %></h2>
    </div>
      <div class="row product-list">
        <%- @index_facade.products_itemable_2.each do |product| %>
          <%- if product.quantity > 0 %>
            <%= render partial: 'itemables/itemables', locals: { itemable: product, category: product.category, class_name: 'col-md-3' } %>
