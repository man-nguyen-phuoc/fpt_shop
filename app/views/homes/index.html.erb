            <%= render partial: 'itemables/out_of_itemables', locals: { itemable: product, category: product.category, class_name: 'col-md-3' } %>
          <% end %>
        <% end %>
      </div>
  </section>

<div class="banner-cs">
  <%= render 'banner_advertisement__3'%>
</div>
 
<div id="accessories-2">
  <div class="accessories-title">
    <h3><b>LIST ACCESSORIES</b></h3>
  </div>
  <div class="row list-accessories">
    <%- @index_facade.categories_of_accessory.each do |category| %>
      <div class="col item-accessories">
        <div class="cat-item text-center">
          <%= link_to category_accessories_path(category) do %>
            <%= image_tag( category.thumbnail, class: "accessory_thumbnail" ) %>
