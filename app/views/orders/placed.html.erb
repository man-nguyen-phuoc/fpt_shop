  <div class="container mt-4">
    <div class="row">
      <div class="my-lg-0 my-1">
        <div id="main-content" class="bg-white border">
          <div class="d-flex flex-column">
            <div class="h5"><%= @user.name %></div>
            <div>Logged in as: <%= @user.email%></div>
          </div>
            <div class="d-flex my-4 flex-wrap">
              <%= link_to carts_path, class: 'order_item', method: :get do%>
                <div class="box me-4 my-1 bg-light">
                  <img src="https://www.freepnglogos.com/uploads/shopping-cart-png/shopping-cart-campus-recreation-university-nebraska-lincoln-30.png"
                        alt="">
                  <div class="d-flex align-items-center mt-2">
                    <div class="tag">Items in Cart</div>
                    <div class="ms-auto number"><%= current_user.cart.order_detail_items.count %></div>
                  </div>
                </div>
              <% end %>
              <div class="box me-4 my-1 bg-light">
                <img src="https://www.freepnglogos.com/uploads/love-png/love-png-heart-symbol-wikipedia-11.png"
                    alt="">
                <div class="d-flex align-items-center mt-2">
                  <div class="tag">Big sale</div>
                  <div class="ms-auto number">10</div>
                </div>
              </div>
            </div>
            <div class="text-uppercase">My recent orders placed</div>
        </div>
      </div>
    </div>
  </div>