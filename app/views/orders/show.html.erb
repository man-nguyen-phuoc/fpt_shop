    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="">
        <div class="card" style="border-radius: 10px;">
          <div class="card-header px-4 py-5">
            <h5 class="text-muted mb-0">Thanks for your Order, <span style="color: #a8729a;"><%= @user.name %></span>!</h5>
          </div>
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <p class="lead fw-normal mb-0" style="color: #a8729a;">Receipt</p>
              <p class="small text-muted mb-0">Receipt Voucher : 1KAU9-84UIL</p>
            </div>
            <div class="card shadow-0 border mb-4">
            <%- @order_detail_items.each do |item|%>
              <%= link_to detail_itemable(item.itemable), class: "text-decoration-none" do %>
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-2">
                        <%= image_tag item.itemable.thumbnail, class: "img-fluid border", alt: 'Phone'%>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0"><%= item.itemable.name %></p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small">White</p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small">Price: <%=currency_to_number(item.itemable.real_price) %></p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small">Quantity: <%= item.quantity%></p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small">Total: <%= currency_to_number(order_summary(item.itemable, item.quantity)) %></p>
                    </div>
                  </div>
                  <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                </div>
              <% end %>
            <% end %>
            </div>

            <div class="d-flex justify-content-between pt-2">
              <p class="fw-bold mb-0">Delivery information</p>
            </div>

            <div class="d-flex justify-content-between pt-2">
              <p class="text-muted mb-0">Phone number: <%= @user.area_code %>+ <%= @user.phone_number.to_fs(:phone, delimiter: " ") %></p>
            </div>

            <div class="d-flex justify-content-between">
              <p class="text-muted mb-0">Recepits Voucher : 18KU-62IIK</p>
            </div>

            <div class="d-flex justify-content-between">
              <p class="text-muted mb-0">Address: <%= @shipping_address.city %>, <%= @shipping_address.district %>, <%= @shipping_address.address %> </p>
            </div>
          </div>
          <div class="card-footer border-0 px-4 py-5"
            style="background-color: #a8729a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
            <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total
              paid: <span class="h2 mb-0 ms-2"><%= currency_to_number(@order_detail.total_price) %></span></h5>
          </div>
        </div>
      </div>
    </div>