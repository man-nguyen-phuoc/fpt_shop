<div class="col-md-4 coupon">
  <div class="text-center card">
    <div class="coupon__body">
      <div class="free"><%= coupon.quantity %></div>
      <span class="d-block mt-3 coupon__key"><%= coupon.code%></span>
      <span class="plan"><%= currency_to_number(coupon.price)%></span>
      <div class="mt-3">
        <button type="button" class="btn coupon__submit  btn-lg">Use</button>
        <button type="button" class="btn coupon__submit  btn-lg">Add Store</button>
      </div>
    </div>
    <div class="out_of_coupons">
      <span class="ofc__text">Out of Coupons</span>
    </div>
  </div>
</div>
