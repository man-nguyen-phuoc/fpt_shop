<div class="row" id="profile">
  <div class="col-3 profile-ct-1 text-center">
    <div class="panel rounded">
      <div class="panel-body border">
        <div class="inner-all">
          <ul class="list-unstyled">
            <li class="text-center">
              <div class="card-body text-center">
                <%= image_tag current_user.thumbnail, class: 'rounded-circle img-fluid border', width: '150' %>
                <h5 class="my-3"><%= current_user.name %></h5>
              </div>
            </li><br>
            <li>
              <div class="btn-group-vertical btn-block d-flex profile-setting">
                <%= link_to edit_user_path, method: :get, class:'btn btn-outline-primary profile-edit' do %>
                  <div class="row">
                    <div class="col-4">
                      <i class="fa fa-cog profile-icon"></i>
                    </div>
                    <div class="col-8 profile-text">
                      <p>Edit Account</p>
                    </div>
                  </div>
                <% end %>

                <%= button_to destroy_user_session_path, method: :delete, class: 'btn btn-outline-primary profile-logout' do %>
                  <div class="row">
                    <div class="col-4">
                      <i class="fa fa-sign-out profile-icon"></i>
                    </div>
                    <div class="col-8 profile-text">
                      <p>Logout</p>
                    </div>
                  </div>
                <% end %>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="col-6 ">
    <div class="row">
      <div class="">
        <div class="profile-user">
          <div class="profile-cover">
            <div class="">
              <h4 class="">Profile</h4>
            </div>
            <div class="">
              <div class="card mb-4">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Full Name :</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><%= current_user.name %></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Email :</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><%= current_user.email%></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Phone :</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0">(+<%= current_user.area_code %>) <%= current_user.phone_number.to_fs(:phone, delimiter: " ")%></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div> 
            <div class="shiping-address-user">
          <div class="profile-cover">
            <div class="">
              <h4 class="">Shiping address</h4>
            </div>
            <div class="">
              <div class="card mb-4">
                <div class="card-body">
                <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Receiver Name :</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><%= @shipping_address&.receiver_name %></p>
                    </div>
                  </div>
                  <hr>

                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Receiver Phone :</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><%= @shipping_address&.receiver_phone_number %></p>
                    </div>
                  </div>
                  <hr>

                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">City :</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><%= @shipping_address&.city %></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">District :</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><%= @shipping_address&.district %></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Address :</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><%= @shipping_address&.address %></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-3 profile-contact ">
        <ul class="list-group no-margin">
          <li class="list-group-item"><i class="fa fa-envelope mr-5"></i> support@bootdey.com</li>
          <li class="list-group-item"><i class="fa fa-globe mr-5"></i> www.bootdey.com</li>
          <li class="list-group-item"><i class="fa fa-phone mr-5"></i> +6281 903 xxx xxx</li>
        </ul>
  </div>
</div>